{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "title"
      }
    },
    "show_title": {
      "type": "Select",
      "config": {
        "options": ["true", "false"],
        "default_value": "true",
        "label": "Show Title"
      }
    },
    "subtitle": {
      "type": "StructuredText",
      "config": {
        "single": "heading2",
        "label": "Subtitle"
      }
    },
    "content": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "Body"
      }
    }
  },
  "Meta": {
    "author": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["person"],
        "label": "Author"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "id"
      }
    },
    "last_updated": {
      "type": "Date",
      "config": {
        "label": "Last Updated"
      }
    }
  }
}
