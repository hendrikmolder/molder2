{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title"
      }
    },
    "show_title": {
      "type": "Select",
      "config": {
        "options": [
          "true",
          "false"
        ],
        "default_value": "true",
        "label": "Show Title"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "choices": {
          "code_block": {
            "type": "Slice",
            "fieldset": "Code Block",
            "description": "Longer Code Block",
            "icon": "code",
            "display": "list",
            "non-repeat": {
              "file_name": {
                "type": "Text",
                "config": {
                  "label": "File Name"
                }
              },
              "code_block": {
                "type": "StructuredText",
                "config": {
                  "multi": "preformatted",
                  "label": "Code Block",
                  "placeholder": "Paste your code here with a label",
                  "labels": [
                    "javascript",
                    "css",
                    "scss",
                    "jsx",
                    "bash",
                    "json",
                    "diff",
                    "markdown",
                    "graphql"
                  ]
                }
              }
            },
            "repeat": {}
          },
          "text": {
            "type": "Slice",
            "fieldset": "Text",
            "description": "Rich Text Section",
            "icon": "text_fields",
            "non-repeat": {
              "body": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "text",
                  "placeholder": "Your content here"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Meta": {
    "subtitle": {
      "type": "StructuredText",
      "config": {
        "single": "heading2",
        "label": "Subtitle"
      }
    },
    "enable_comments": {
      "type": "Select",
      "config": {
        "options": [
          "true",
          "false"
        ],
        "default_value": "true",
        "label": "Enable Comments"
      }
    },
    "author": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": [
          "person"
        ],
        "label": "Author"
      }
    },
    "preview_image": {
      "type": "Image",
      "config": {
        "constraint": {},
        "thumbnails": [],
        "label": "Preview Image"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "id"
      }
    }
  }
}